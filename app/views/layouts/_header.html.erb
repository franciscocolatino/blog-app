<nav class="navbar">
    <% if @current_user %>
        <a class="navbar-brand" href="/">Olá, <%= @current_user.name %></a>
    <% end %>
    <ul class="nav justify-content-end">
        <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/posts">Posts</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/users">Usuários</a>
        </li>
        <% if @current_user %>
            <li class="nav-item">
                <%= link_to "Logout", logout_path, method: :get, class: "btn btn-danger" %>
            </li>
        <% else %>
            <li class="nav-item">
                <%= link_to "Login", login_path, method: :get, class: "btn btn-danger" %>
            </li>
        <% end%>
    </ul>
